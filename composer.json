{
    "name": "gamedev/academy",
    "description": "Plataforma de cursos online gamificada para desenvolvimento de jogos",
    "type": "project",
    "license": "MIT",
    "version": "1.0.0",
    "authors": [
        {
            "name": "GameDev Academy",
            "email": "contato@gamedev.academy"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ckeditor/ckeditor": "^4.25",
        "cocur/slugify": "^4.4",
        "firebase/php-jwt": "^6.8",
        "guzzlehttp/guzzle": "^7.8",
        "intervention/image": "^2.7",
        "league/plates": "^3.5",
        "monolog/monolog": "^3.4",
        "nesbot/carbon": "^2.69",
        "nikic/fast-route": "^1.3",
        "phpmailer/phpmailer": "^7.0",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.2",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.3",
        "phpunit/phpunit": "^10.3",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit",
        "migrate": "php database/migrate.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
